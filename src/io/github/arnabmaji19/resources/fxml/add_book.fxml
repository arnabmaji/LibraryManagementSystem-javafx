<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXButton?>

<StackPane
        fx:id="stackPane"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="io.github.arnabmaji19.controller.AddBookController"
        stylesheets="@../styles/style.css">
    <GridPane
            alignment="CENTER" vgap="20" hgap="10">

        <Text
                text="Book ID"
                GridPane.rowIndex="0"
                GridPane.columnIndex="0"/>
        <JFXTextField
                fx:id="bookIdTextField"
                GridPane.rowIndex="0"
                GridPane.columnIndex="1"/>
        <Text
                text="Book Name"
                GridPane.rowIndex="1"
                GridPane.columnIndex="0"/>
        <JFXTextField
                fx:id="bookNameTextField"
                GridPane.rowIndex="1"
                GridPane.columnIndex="1"/>
        <Text
                text="Author"
                GridPane.rowIndex="2"
                GridPane.columnIndex="0"/>
        <JFXTextField
                fx:id="authorTextField"
                GridPane.rowIndex="2"
                GridPane.columnIndex="1"/>
        <Text
                text="Publisher"
                GridPane.rowIndex="3"
                GridPane.columnIndex="0"/>
        <JFXTextField
                fx:id="publisherTextField"
                GridPane.rowIndex="3"
                GridPane.columnIndex="1"/>
        <Text
            text="Quantity"
            GridPane.rowIndex="4"
            GridPane.columnIndex="0"/>
        <JFXTextField
            fx:id="quantityTextField"
            GridPane.rowIndex="4"
            GridPane.columnIndex="1"/>
        <JFXButton
                text="Add Book"
                onAction="#onAddBook"
                GridPane.rowIndex="5"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                GridPane.halignment="CENTER"/>


    </GridPane>
</StackPane>


